{
  "manifest_version": 3,
  "name": "Loop Printer BETA",
  "version": "0.1",
  "description": "THIS EXTENSION IS FOR BETA TESTING - Print a Microsoft Loop page!",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["https://loop.microsoft.com/*"],
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://loop.microsoft.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon-128.png"
  }
}
